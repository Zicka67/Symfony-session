{# templates/student/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de {{ student.firstName }} {{ student.lastName }}{% endblock %}

{% block body %}
<div class="basic-tab">
    <table class="tabDetailSession">
      <thead>
        <tr>
          <th colspan="2">Détails de {{ student.firstName }} {{ student.lastName }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Prénom :</td>
          <td>{{ student.firstName }}</td>
        </tr>
        <tr>
          <td>Nom :</td>
          <td>{{ student.lastName }}</td>
        </tr>
        <tr>
          <td>Phone :</td>
          <td>{{ student.phone }}</td>
        </tr>
        <tr>
          <td>Email :</td>
          <td>{{ student.email }}</td>
        </tr>
        <tr>
          <td>Ville :</td>
          <td>{{ student.ville }}</td>
        </tr>
        {% if estInscrit %}
        <tr>
          {% for session in sessions %}
          {# {{ dump(sessions) }} #}
          <td>Sessions en cours de {{ student.firstName }} {{ student.lastName }}</td>
          <td> <a href="{{ path('app_showDetailsSession', {'id': session.id}) }}">{{ session.getTitleSection }}</a></td>
          {% endfor %}
        </tr>
          {% else %}
              <p>Pas de session</p>
          {% endif %}
        
      </tbody>
    </table>
  </div>

{% endblock %}
