<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        {# la fonction asset() pour que Symfony se charge de générer le chemin correct. (url absolue) #}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>   

            <nav>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_formation') }}">Formations</a>
                    {% if is_granted('[ROLE_USER]') %} {# pour filtrer sur le role #}
                    <li><a href="{{ path('app_listStudients') }}">Etudiants</a></li>
                    <li><a href="{{ path('app_former') }}">Formateurs</a></li>
                    <li><a href="{{ path('app_programme') }}">Programmes</a></li>
                    <li><a href="{{ path('app_module') }}">Modules</a></li>
                    {% else %}
                        {# {% if is_granted('IS_AUTHENTICATED_FULLY') %} pour filtrer sur la connection de l'user #}
                        {% if app.user.isVerified %} {# pour filtrer sur la verification du mail (true/false) #}
                        <li><a href="">Test isVerified</a></li>
                        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        {% else %}
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                        {% endif %}
                    {% endif %}
                </ul>
            </nav>

        </header>

        <div class="container">
            <div class="page-title">
                <p>{{ block('title') }}</p>
            </div>
        </div>



        <footer>

        </footer>
        {% block body %}{% endblock %}
    </body>
</html>